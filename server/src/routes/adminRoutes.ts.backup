const router = express.Router();

// Type definitions for JSON fields
interface ProfileData {
  registrationDate?: string;
  registrationMethod?: string;
  university?: string;
  position?: string;
  department?: string;
  [key: string]: any;
}

interface AuditInfo {
  createdAt?: string;
  createdBy?: string;
  updatedAt?: string;
  updatedBy?: string;
  deletedAt?: string;
  deletedBy?: string;
  [key: string]: any;
}

