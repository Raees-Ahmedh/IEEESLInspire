  "/universities",
  //authenticateToken,
  //requireAdmin,
  async (req: Request, res: Response) => {
    try {
      const {
        name,
        type,
        uniCode,
        address,
        contactInfo,
        website,
        recognitionCriteria = [],
        imageUrl,
        logoUrl,
        galleryImages,
        additionalDetails,
      } = req.body;

