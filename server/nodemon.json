{
  "watch": ["src", "index.ts", "prisma"],
  "ext": "ts,js,json,prisma",
  "ignore": [
    "node_modules", 
    "dist", 
    "*.log",
    "coverage",
    ".env",
    "prisma/migrations"
  ],
  "exec": "ts-node index.ts",
  "signal": "SIGTERM",
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "echo 'ðŸ”„ Server restarting due to file changes...'",
    "crash": "echo 'ðŸ’¥ Server crashed - waiting for file changes to restart'",
    "start": "echo 'ðŸš€ Server started successfully'",
    "exit": "echo 'ðŸ‘‹ Server stopped'"
  }
}